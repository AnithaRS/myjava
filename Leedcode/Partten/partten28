package Partten;

public class partten28 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		partten(4);
	}

	public static void partten(int n) {
 		for(int r=1;r<2*n;r++) {
			int sp=r<=n?n-r:r-n;
			for(int s=1;s<=sp;s++) {
				System.out.print(" ");
			}int val=r<=n?r:2*n-r;
			for(int c=1;c<=val;c++) {
				System.out.print("* ");
			}System.out.println();
		}
		
		
	}
}
